 bindsym Print exec grim -c -g "$(slurp)" -t png - | tee "/tmp/screenshot_$(date +%s).png" | wl-copy -t image/png
 bindsym Shift+Mod1+4 exec grim -c -g "$(slurp)" -t png - | tee "/tmp/screenshot_$(date +%s).png" | wl-copy -t image/png
 bindsym $mod+Print exec grim -c - | tee "/tmp/screenshot_$(date +%s).png" | wl-copy -t image/png
 bindsym $mod+Shift+Mod1+4 exec grim -c - | tee "/tmp/screenshot_$(date +%s).png" | wl-copy -t image/png

 bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
 bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
 bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
 bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
 bindsym XF86AudioPlay exec mpc toggle
 bindsym XF86AudioNext exec mpc next
